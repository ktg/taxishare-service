<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.clickable {
			cursor: pointer;
		}
	</ui:style>
	<g:HTMLPanel styleName="taxiPanel">
		<table>
		<tr><td>
		<g:Label styleName="idLabel" ui:field="taxiID" />
		</td>
		<td>
		<g:Label ui:field="destination" />
		<g:Label addStyleNames="{style.clickable}" ui:field="status" />
		</td>
		<td>
		<g:Label ui:field="company" />		
		</td>
		<!-- <td>
		People...
		</td>-->
		<td><span>Fare: </span><g:TextBox ui:field="fare"/></td>
		<td><span>Pickup Time: </span><g:TextBox ui:field="pickup"/><br/>
		<span>Arrival Time: </span><g:TextBox ui:field="arrival"/>
		</td>		
		</tr>
		</table>		
	</g:HTMLPanel>
</ui:UiBinder> 