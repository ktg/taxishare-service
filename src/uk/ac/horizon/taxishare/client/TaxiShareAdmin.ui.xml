<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main {
			position: absolute !important;
			left: 0px;
			right: 0px;
			top: 0px;
			bottom: 0px;
			overflow: auto;
		}
		
		.abs {
			position: absolute;
			overflow: auto;
		}
		
		.clickable {
			cursor: pointer;
		}
		
		.companies {
			position: absolute;
			left: 0px;
			bottom: 0px;
			padding: 5px;
		}
	</ui:style>
	<g:DockLayoutPanel styleName="{style.main}">
		<g:center>
			<g:FlowPanel styleName="{style.abs}" ui:field="taxis" />
		</g:center>
		<g:south size="50">
			<g:FlowPanel>
				<g:FlowPanel styleName="{style.companies}" ui:field="companies" />
			</g:FlowPanel>
		</g:south>
	</g:DockLayoutPanel>
</ui:UiBinder> 